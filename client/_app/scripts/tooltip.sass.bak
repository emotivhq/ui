@import "base"

[data-tooltip]
  position: relative
  cursor: pointer

[data-tooltip]:before,
[data-tooltip]:after
  position: absolute
  visibility: hidden
  -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)"
  filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=0)
  opacity: 0
  -webkit-transition: opacity 0.1s ease-in-out, visibility 0.1s ease-in-out, -webkit-transform 0.1s cubic-bezier(0.71, 1.7, 0.77, 1.24)
  -moz-transition: opacity 0.1s ease-in-out, visibility 0.1s ease-in-out, -moz-transform 0.1s cubic-bezier(0.71, 1.7, 0.77, 1.24)
  transition: opacity 0.1s ease-in-out, visibility 0.1s ease-in-out, transform 0.1s cubic-bezier(0.71, 1.7, 0.77, 1.24)
  -webkit-transform: translate3d(0, 0, 0)
  -moz-transform: translate3d(0, 0, 0)
  transform: translate3d(0, 0, 0)
  pointer-events: none

[data-tooltip]:hover:before,
[data-tooltip]:hover:after,
[data-tooltip]:focus:before,
[data-tooltip]:focus:after
  visibility: visible
  -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)"
  filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=100)
  opacity: 1
    
[data-tooltip]:before
  z-index: 1001
  border: 6px solid transparent
  background: transparent
  content: ""

[data-tooltip]:after 
  z-index: 1000
  padding: 0.5rem 0 0.5rem 0
  width: 4.5rem
  background-color: #000
  background-color: hsla(0, 0%, 20%, 0.9)
  color: #fff
  content: attr(data-tooltip)
  font-size: 0.7rem
  line-height: 1
  @media screen and (max-width: $phone-portrait-width)
    width: 2.5rem
    font-size: 0.6rem

[data-tooltip]:before,
[data-tooltip]:after
  bottom: 100%
  left: 50%

[data-tooltip]:before
  margin-left: -0.3rem
  margin-bottom: -0.8rem
  border-top-color: #000
  border-top-color: hsla(0, 0%, 20%, 0.9)

[data-tooltip]:after
  margin-left: -5rem

[data-tooltip]:hover:before,
[data-tooltip]:hover:after,
[data-tooltip]:focus:before,
[data-tooltip]:focus:after
  -webkit-transform: translateY(-0.8rem)
  -moz-transform: translateY(-0.8rem)
  transform: translateY(-0.8rem)

.tooltip--left:before,
.tooltip--left:after 
  right: 100%
  bottom: 50%
  left: auto

.tooltip--left:before 
  margin-left: 0
  margin-right: -0.7rem
  margin-bottom: 0
  border-top-color: transparent
  border-left-color: #000
  border-left-color: hsla(0, 0%, 20%, 0.9)

.tooltip--left:hover:before,
.tooltip--left:hover:after,
.tooltip--left:focus:before,
.tooltip--left:focus:after 
  -webkit-transform: translateX(-0.8rem)
  -moz-transform: translateX(-0.8rem)
  transform: translateX(-0.8rem)

.tooltip--right:before,
.tooltip--right:after 
  bottom: 50%
  left: 100%

.tooltip--right:before 
  margin-bottom: 0
  margin-left: -0.7rem
  border-top-color: transparent
  border-right-color: #000
  border-right-color: hsla(0, 0%, 20%, 0.9)

.tooltip--right:hover:before,
.tooltip--right:hover:after,
.tooltip--right:focus:before,
.tooltip--right:focus:after 
  -webkit-transform: translateX(0.8rem)
  -moz-transform: translateX(0.8rem)
  transform: translateX(0.8rem)

.tooltip--left:before,
.tooltip--right:before 
  top: 3px

.tooltip--left:after,
.tooltip--right:after 
  margin-left: 0
  margin-bottom: -1rem
